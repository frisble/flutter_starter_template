    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_starter_template_dev",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define-from-file",
                "env/env_dev.json"
            ]
        },
        {
            "name": "flutter_starter_template_prod",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define-from-file",
                "env/env_prod.json"
            ]
        },
        {
            "name": "flutter_starter_template (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_starter_template (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}